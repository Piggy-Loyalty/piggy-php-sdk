{
  "name": "piggy/piggy-php-sdk",
  "description": "php sdk piggy",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Technical Team Piggy",
      "email": "techniek@piggy.nl"
    },
    {
      "name": "Mike Edinger",
      "email": "mike@piggy.nl"
    },
    {
      "name": "Stefan Leenen",
      "email": "stefan@piggy.nl"
    },
    {
      "name": "Diego Relyveld",
      "email": "diego@piggy.nl"
    }
  ],
  "autoload": {
    "psr-4": {
      "Piggy\\Api\\": "src/"
    },
    "files": [
      "src/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Piggy\\Api\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.3",
    "ext-json": "*",
    "guzzlehttp/guzzle": "^7.8"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.10",
    "laravel/pint": "^1.18",
    "pestphp/pest": "^3.7",
    "mockery/mockery": "^1.6"
  },
  "scripts": {
    "test": "./vendor/bin/phpunit tests",
    "pint": "vendor/bin/pint"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
